<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/matt"
    >

    <Button
        android:id="@+id/button_caleb"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/caleb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_beau"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/beauregard"
        app:layout_constraintBottom_toTopOf="@+id/button_caleb"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_fjord"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fjord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_caleb" />

    <Button
        android:id="@+id/button_cad"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/caduceus"
        app:layout_constraintBottom_toTopOf="@+id/button_fjord"
        app:layout_constraintStart_toEndOf="@+id/button_beau" />

    <Button
        android:id="@+id/button_yasha"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/yasha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_molly"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/mollymauk"
        app:layout_constraintBottom_toTopOf="@+id/button_yasha"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_jester"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/jester"
        app:layout_constraintBottom_toTopOf="@+id/button_nott"
        app:layout_constraintEnd_toStartOf="@+id/button_molly" />

    <Button
        android:id="@+id/button_nott"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/nott"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_yasha" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/selection"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />
</androidx.constraintlayout.widget.ConstraintLayout>